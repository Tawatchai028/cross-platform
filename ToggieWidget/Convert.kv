<UI>:
    id:scr_manager
    Scr1:
    Scr2:

<Scr1>:
    name: "Scr1"
    canvas.before:
        Rectangle: 
            source: "1001.png"
            size:root.width, root.height
            pos: self.pos
    Button:
        text: 'แปลงเลขฐาน'
        font_name: 'tahoma'
        size_hint: 0.50 , 0.20
        background_color: 'blue'
        pos_hint: {'center_x': 0.5,'center_y': 0.1}
        on_press: app.root.current = "Scr2"

<Scr2>:
    name: "Scr2"
    BoxLayout:
        orientation: 'vertical'
        Button:
            pos_hint: {'x':0.85,'y': 0.85}
            size_hint: 0.1, 0.2
            text: 'HOME'
            on_press: app.root.current = "Scr1"
        TextInput:
            id: txt_number
            hint_text: "input number"  
        BoxLayout:       
            ToggleButton:
                text: "base2"
                font_name: 'tahoma'
                group: 'convert_mode'
                on_press: root.convert(*args)
            ToggleButton:
                text: "base8"
                font_name: 'tahoma'
                group: 'convert_mode'
                on_press: root.convert(*args)
            ToggleButton:
                text: "base16"
                font_name: 'tahoma'
                group: 'convert_mode'
                on_press: root.convert(*args) 
            
        Label:
            id: lbl_output
            text: 
               
            