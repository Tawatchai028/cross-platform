<UI>:
    id:scr_manager
    Scr_knowledge:
    Scr_bmi:
  
        
############  ui หน้า 2 ##############
<Scr_bmi>:
    name: "Scr_bmi"
    BoxLayout:
        orientation: 'vertical'
        Button:
            pos_hint: {'x':0.85,'y': 0.85}
            size_hint: 0.1, 0.2
            text: 'HOME'
            on_press: app.root.current = "Scr_knowledge"
        TextInput:
            id: txt_weight 
            hint_text: "input weigth"   
        Slider:
            id: sld_weight
            min: 30
            max: 100
            step: 0.5
            set: 40
            on_value: txt_weight.text = str(sld_weight.value)
        TextInput:
            id: txt_height
            hint_text: "input heigth"
        Slider:
            id: sld_height
            min: 100
            max: 300
            step: 0.5
            set: 100
            on_value: txt_height.text = str(sld_height.value)
        Button:
            id: btn_bmi
            on_press: root.cal_bmi() # ผูกฟังก์ชั่น cal_bmi ไม่ส่งค่าใด ๆ 
        Label:
            id: lbl_bmi
            text: 'bmi = '
        Image:
            id: img_bmi
          
            
############  ui หน้า 1 ##############
<Scr_knowledge>:
    name: "Scr_knowledge"
    BoxLayout:
        orientation: 'vertical'
        Image:
            source: "BMI.png"
        Button:
            text: 'คำนวณ'
            font_name: 'tahoma'
            size_hint: 0.50 , 0.20
            background_color: 'blue'
            pos_hint: {'center_x': 0.5,'center_y': 0.5}
            on_press: app.root.current = "Scr_bmi"